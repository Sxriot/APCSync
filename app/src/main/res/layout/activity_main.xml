<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.gabrielwohlford.apcsync.MainActivity">


    <Button
        android:id="@+id/Sync"
        android:layout_width="353dp"
        android:layout_height="124dp"
        android:text="SYNC"
        android:textAllCaps="false"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/FeedBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Sync"
        android:layout_centerHorizontal="true"
        android:scrollbars = "vertical"
        android:text="FeedBack Goes here!..."
        android:textColor="@android:color/holo_green_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/refreshConnection"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Sync"
        app:layout_constraintVertical_bias="0.026"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp" />
    <!--

        <Button
            android:id="@+id/Settings"
            android:layout_width="353dp"
            android:layout_height="69dp"
            android:text="Settings"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Sync"
            app:layout_constraintHorizontal_bias="0.533" />
    -->
    <Button
        android:id="@+id/refreshConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:icon="@drawable/ic_sync_black_24dp"
        android:text="Refresh Connection"
        android:textAllCaps="false"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />


</android.support.constraint.ConstraintLayout>